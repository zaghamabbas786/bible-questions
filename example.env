# Clerk Authentication
# Get these from https://clerk.com dashboard
# Create an account and application, then copy the keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Supabase Database
# Get these from https://supabase.com dashboard
# Create a project, then go to Settings > API
# Use the new format keys (sb_publishable_... and sb_secret_...)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=sb_publishable_your_publishable_key_here
# Optional: Secret key for admin operations (not currently used in this project)
# SUPABASE_SECRET_KEY=sb_secret_your_secret_key_here

# Google Gemini API
# Get this from https://aistudio.google.com
# Create an API key in the Google AI Studio
GEMINI_API_KEY=your_gemini_api_key_here

# Stripe Payment
# Get these from https://stripe.com dashboard
# Go to Developers > API keys
# IMPORTANT: 
# - NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY is SAFE to expose (used on frontend)
# - STRIPE_SECRET_KEY must NEVER be exposed (only used in backend API routes)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Site URL (for SEO - sitemap, canonical URLs, etc.)
# Set this to your production domain (e.g., https://biblequestions.com)
# For local development, you can use http://localhost:3000
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Google Analytics
# Get this from https://analytics.google.com
# Create a property and get your Measurement ID (format: G-XXXXXXXXXX)
# This is safe to expose as it's a public identifier
NEXT_PUBLIC_GA_ID=G-C1E6Q549SB

# Resend Email Service
# Get these from https://resend.com
# Create an account, verify your domain, then get your API key
# The from email must be a verified domain in Resend
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=welcome@yourdomain.com

# Clerk Webhook Secret (for welcome emails)
# Get this from Clerk Dashboard > Webhooks
# Create a webhook endpoint pointing to: https://yourdomain.com/api/webhooks/clerk
# Select event: user.created
# Copy the signing secret
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here



